<registers name="Debug Module System Bus Registers">
    <register name="Serial Info" short="serinfo" address="0x280">
        <field name="0" bits="31:8" access="R" reset="0" />
        <field name="serial7" bits="7" access="R" reset="Preset">
            Like \Fserialzero.
        </field>
        <field name="serial6" bits="6" access="R" reset="Preset">
            Like \Fserialzero.
        </field>
        <field name="serial5" bits="5" access="R" reset="Preset">
            Like \Fserialzero.
        </field>
        <field name="serial4" bits="4" access="R" reset="Preset">
            Like \Fserialzero.
        </field>
        <field name="serial3" bits="3" access="R" reset="Preset">
            Like \Fserialzero.
        </field>
        <field name="serial2" bits="2" access="R" reset="Preset">
            Like \Fserialzero.
        </field>
        <field name="serial1" bits="1" access="R" reset="Preset">
            Like \Fserialzero.
        </field>
        <field name="serial0" bits="0" access="R" reset="Preset">
            1 means serial interface 0 is supported.
        </field>
    </register>

    <register name="Serial Send 0" short="sersend0" address="0x200">
        Values written to this address are added to the core-to-debugger queue,
        unless the queue is already full.
        <field name="data" bits="31:0" access="R/W" reset="0" define="0" />
    </register>

    <register name="Serial Receive 0" short="serrecv0" address="0x204">
        This register contains the oldest value in the debugger-to-core queue.
        Reading the register removes that value from the queue.  If the queue
        is empty, reading this register returns an undefined value.
        <field name="data" bits="31:0" access="R" reset="0" define="0" />
    </register>

    <register name="Serial Status 0" short="serstat0" address="0x208">
        <field name="0" bits="31:2" access="R" reset="0" />
        <field name="sendr" bits="1" access="R" reset="1">
            Send ready. 1 when the core-to-debugger queue is not full. 0
            otherwise.
        </field>
        <field name="recvr" bits="0" access="R" reset="1">
            Receive ready. 1 when the debugger-to-core queue is not empty. 0
            otherwise.
        </field>
    </register>

    <register name="Serial Send 1" short="sersend1" address="0x210" />
    <register name="Serial Receive 1" short="serrecv1" address="0x214" />
    <register name="Serial Status 1" short="serstat1" address="0x218" />

    <register name="Serial Send 2" short="sersend2" address="0x220" />
    <register name="Serial Receive 2" short="serrecv2" address="0x224" />
    <register name="Serial Status 2" short="serstat2" address="0x228" />

    <register name="Serial Send 3" short="sersend3" address="0x230" />
    <register name="Serial Receive 3" short="serrecv3" address="0x234" />
    <register name="Serial Status 3" short="serstat3" address="0x238" />

    <register name="Serial Send 4" short="sersend4" address="0x240" />
    <register name="Serial Receive 4" short="serrecv4" address="0x244" />
    <register name="Serial Status 4" short="serstat4" address="0x248" />

    <register name="Serial Send 5" short="sersend5" address="0x250" />
    <register name="Serial Receive 5" short="serrecv5" address="0x254" />
    <register name="Serial Status 5" short="serstat5" address="0x258" />

    <register name="Serial Send 6" short="sersend6" address="0x260" />
    <register name="Serial Receive 6" short="serrecv6" address="0x264" />
    <register name="Serial Status 6" short="serstat6" address="0x268" />

    <register name="Serial Send 7" short="sersend7" address="0x274" />
    <register name="Serial Receive 7" short="serrecv7" address="0x278" />
    <register name="Serial Status 7" short="serstat7" address="0x27c" />
</registers>
